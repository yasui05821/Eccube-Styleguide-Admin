extends /assets/tmpl/moc/layout/_layout-3col.pug
block pageTitle
    +b.c-pageTitle
        +e.titles
            +e.H2.title 商品登録
            +e.SPAN.subTitle 商品管理

block primaryContents
    .c-block
        .c-block__heading
            .c-block__titles
                h2.c-block__title 基本設定
                .c-block__toolTip
                    i.fa.fa-question-circle
            .c-block__toggle
                i.fa.fa-angle-up
        .c-block__contents
            form
                .c-form
                    .c-form__label
                        label
                            span.c-form__labelTitle 商品ID
                            .c-form__labelToolTip
                                i.fa.fa-question-circle
                            .c-form__labelRequired 必須
                    .c-form__input
                        input(type="text")

block secondaryContents
    +b.c-block
        +e.heading
            +e.titles
                +e.H2.title カテゴリ
                +e.toolTip
                    i.fa.fa-question-circle
            +e.toggle
                i.fa.fa-angle-up
        +e.contents
            form
                +e.INPUT.search(type='text' placeholder='カテゴリ検索')
                +e.BUTTON.searchBtn
                    i.fa.fa-search
                +e.categories
                    ul
                        li
                            input(type='checkbox')
                            +e.LABEL.categoryLayer1 カテゴリA
                        li
                            input(type='checkbox')
                            +e.LABEL.categoryLayer2 ├ カテゴリA-a
                        li
                            input(type='checkbox')
                            +e.LABEL.categoryLayer2 ├ カテゴリA-b
                        li
                            input(type='checkbox')
                            +e.LABEL.categoryLayer2 └ カテゴリA-c
                        li
                            input(type='checkbox')
                            +e.LABEL.categoryLayer3 └ カテゴリA-c-2
                        li
                            input(type='checkbox')
                            +e.LABEL.categoryLayer2 └ カテゴリA-b
                a.c-block__addAndEdit(href='#') カテゴリの追加・編集

block conversionArea
    +b.c-conversionArea
        +e.container
            span 公開
            span 更新